.top{
  text-align:center;
  background:#ffffff;
  line-height:80rpx;
  height:80rpx;
  width:100%;
  position: fixed;
}
.content{
  padding:0 30rpx 0 30rpx;
  margin-top:100rpx;
  margin-bottom:100rpx;
}
.text{
  line-height:80rpx;
  font-size:40rpx;
  font-weight: 600;
}
.card{
  display:flex;
  flex-direction: column;
  height:auto;
  background-color:#ffffff;
  border-radius: 14rpx;
  box-shadow:4px 4px 6px gray;
  margin:20rpx 20rpx 30rpx 20rpx;
}
.head{
  display:flex;
  padding:30rpx 0;
}
.avatar{   
  height: 120rpx;    
  width: 120rpx;    
  border-radius: 50%;
  margin:20rpx 35rpx 0 20rpx;
}
.info{
  height:140rpx;
  display:flex;
  flex-direction: column;
  line-height:54rpx;
}
.btn{
  margin:20rpx;
}